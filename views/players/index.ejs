    <body>
        
        <div class="topnav">
  <a class="active" href="#home">Home</a>
  <a href="#news">News</a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
</div>


  <a href="/players/new" class="btn btn-success">New</a>
             <div class="col-lg-12 text-center"> <p> </p>   </div>
            
        <div class="container">
            <h1>Cricket Players List 2021</h1>
             <table style="width:95%">
           
  <tr>
    <th>Player</th>
    <th>Ranking</th>
    <th>Country</th>
     <th>Edit/Delete </th> 
 

  </tr>

 <% players.forEach(player => { %>
                        <tr>
                            
                            <td> <%= player.player %>  </td>
                            <td>   <%= player.Ranking %> </td>
                            <td>  <%= player.country %> </td>
                     
                
                            <td>
                             
   
                                  <a href="/players/edit/<%= player.id %>"  >
                                <button  type="submit"> Edit
                                </button>
                            </a>
                             
                       
 
                                <form action="/players/<%= player.id %>?_method=DELETE" method="POST" class="d-inline"  >
                                <button class="btn btn-danger" style="margin-left: 5px;" type="submit">Delete
                                  </button>
                               </form>
                            </td>
                        </tr>
                        <% }) %>

            </table>
            </div>

</body>



</html>